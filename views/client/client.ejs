                    <thead class="forme">
                        <tr>
                            <td>Nom</td>
                            <td>N° chambre</td>
                            <td>voir plus</td>
                            <td>Passer<br>commande</td>
                            <td>Consulter<br>facture</td>

                        </tr>
                    </thead>
                    <% var i = 0; var num=',';var n=0; var nom ='';%>

                        <% client.forEach(function(r){  %>
                            <tr>
                                <td>

                                    
                                    <% chambre.forEach(function(rs){  
                                        if(r.id_client==rs.id_client){%>
                                       
                                        <% chambrec.forEach(function(row){  
                                            if(rs.id_chambre==row.id_chambre){
                                                if(row.status=='occupé'){%>
                                                    <%nom=r.nom %>
                                                    <%n=r.id_client %>
                                                <%}}})%>
                                            <%}})%>
                                            <%=nom %>
                                </td>
                                <td>

                                    <div class="groupe">
                                
                                        
                                        <button type="button" class="btn btn-primary 
                                        btn-sm" data-toggle="modal" 
                                        data-target="#exampleModal"
                                        id="submit" onClick="editFunc(<%=n; %>)">
                                        <% chambre.forEach(function(rs){  
                                            if(r.id_client==rs.id_client){%>
                                           
                                            <% chambrec.forEach(function(row){  
                                                if(rs.id_chambre==row.id_chambre){
                                                    if(row.status=='occupé'){%>
                                                        <%num=num+rs.id_chambre+',' %>
                                                    <%}}})%>
                                                <%}})%>
                                                <%=num%>
                                    </button>
                                                
                                                        
                                    </div>


                                </td>
                                <td>
                                    <div class="groupe">
                                        <a href="javascript:void(0);" id="btnPopup" onClick="editFunc(<%=n; %>)" data-toggle="tooltip" class="btnPopup btn"> <button id="">Détails</button></a>
                                    </div>
                                </td>
                                <td>
                                    <div class="groupe">
                                        <a href="/receptioniste/commande/<%=n %>"><button  id="couleur0">Ajouter</button></a>
                                    </div>
                                </td>
                                <td>
                                    <div class="groupe">
                                        <a href="/generateReport2/<%=n %>"><button id="couleur1">Client</button></a>
                                    </div>
                                </td>
                            </tr>
                            <% i=i+1 %>
                            <%num=''%>
                                <% }) %>


                </table>

            </div>

        </section>

